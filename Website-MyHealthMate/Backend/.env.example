# ========================================
# BACKEND CONFIGURATION (Private - Server Side)
# Copy this file to .env and fill in your values
# ========================================

# MongoDB Database
MONGODB_URI=your-mongodb-connection-string-here
DATABASE_NAME=MyhealthMate_db

# Server
APP_HOST=localhost
APP_PORT=5000
NODE_ENV=development

# Session Security (Generate a strong random string)
SESSION_SECRET=your-secret-key-here

# CORS - Allowed Origins (Update to match your Frontend URL)
WEBSITE_DOMAIN_DEV=http://localhost:3000
WEBSITE_DOMAIN_PROD=https://yourdomain.com

# ML Service Connection
ML_SERVICE_URL=http://localhost:5001

# Cloudinary (Image/Video Upload) - Optional
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Brevo Email Service (SendInBlue) - Optional
BREVO_API_KEY=
BREVO_SENDER_EMAIL=

# Project Info
AUTHOR=MyHealthMate Team
